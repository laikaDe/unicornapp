<% content_for :page_title, "ﾟ･✧*"+@unicorn.name + "*✧･ﾟ" %>


<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_user_unicorn_path(current_user.id, @unicorn), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", user_unicorns_path(current_user.id), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="name">
        <b>Name:</b> <%= @unicorn.name %>
		</div>
        <div class="age">
        <b>Age:</b> <%= @unicorn.age %>
		</div>
        <div class="color">
		<b>Color:</b> <%= @unicorn.color %>
		</div>
        <div class="personality">
		<b>Personality:</b> <%= @unicorn.personality %>
		</div>
        <div class="quirks">
		<b>Quirks:</b> <%= @unicorn.quirks %>
		</div>
	</div>

	<section class="section superpowers">
	<div class="container">
		<h2 class="subtitle is-5"><strong><%= @unicorn.superpowers.count %></strong> Superpowers</h2>
		<%= render @unicorn.superpowers %>
		<div class="comment-form">
			<hr />
			<%= link_to "Create a Superpower", user_unicorn_superpower_path(current_user.id,@unicorn)%>

		</div>
	</div>


</section>

